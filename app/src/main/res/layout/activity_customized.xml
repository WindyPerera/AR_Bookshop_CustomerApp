<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.CustomizedActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <include layout="@layout/toolbar_layout" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="411dp"
        android:layout_height="672dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView22"
                android:layout_width="91dp"
                android:layout_height="30dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp"
                android:text="Name :"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="89dp"
                android:layout_height="30dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="25dp"
                android:text="Address :"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView22" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="98dp"
                android:layout_height="30dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="32dp"
                android:text="Post Code :"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView23" />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="94dp"
                android:layout_height="25dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="26dp"
                android:text="Mobile No :"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView24" />

            <EditText
                android:id="@+id/cuz_name"
                android:layout_width="266dp"
                android:layout_height="45dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:hint="your name"
                android:inputType="textPersonName"
                app:layout_constraintStart_toEndOf="@+id/textView22"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/cuz_address"
                android:layout_width="270dp"
                android:layout_height="60dp"
                android:layout_marginStart="31dp"
                android:layout_marginTop="7dp"
                android:ems="10"
                android:hint="address"
                android:inputType="textPersonName"
                app:layout_constraintStart_toEndOf="@+id/textView23"
                app:layout_constraintTop_toBottomOf="@+id/cuz_name" />

            <EditText
                android:id="@+id/cuz_pcode"
                android:layout_width="268dp"
                android:layout_height="48dp"
                android:layout_marginStart="21dp"
                android:layout_marginTop="9dp"
                android:ems="10"
                android:hint="post code"
                android:inputType="textPersonName"
                app:layout_constraintStart_toEndOf="@+id/textView24"
                app:layout_constraintTop_toBottomOf="@+id/cuz_address" />

            <EditText
                android:id="@+id/cuz_mobile"
                android:layout_width="271dp"
                android:layout_height="48dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="mobile"
                android:inputType="phone"
                app:layout_constraintStart_toEndOf="@+id/textView25"
                app:layout_constraintTop_toBottomOf="@+id/cuz_pcode" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="227dp"
                android:layout_height="27dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="22dp"
                android:text="Add Your Customized Order Here :"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cuz_mobile" />

            <ImageView
                android:id="@+id/cuz_image"
                android:layout_width="294dp"
                android:layout_height="303dp"
                android:layout_marginStart="56dp"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView26"
                app:srcCompat="@drawable/ic_list" />

            <Button
                android:id="@+id/cuz_btn"
                android:layout_width="218dp"
                android:layout_height="39dp"
                android:layout_marginStart="100dp"
                android:layout_marginEnd="92dp"
                android:backgroundTint="#59B0F6"
                android:text="select"
                android:textAllCaps="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cuz_image" />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="122dp"
                android:layout_height="22dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="48dp"
                android:text="Description"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cuz_image" />

            <EditText
                android:id="@+id/cuz_des"
                android:layout_width="245dp"
                android:layout_height="66dp"
                android:layout_marginStart="23dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                app:layout_constraintStart_toEndOf="@+id/textView27"
                app:layout_constraintTop_toBottomOf="@+id/cuz_btn" />

            <Button
                android:id="@+id/placed_cuz"
                android:layout_width="280dp"
                android:layout_height="0dp"
                android:layout_marginStart="65dp"
                android:layout_marginTop="10dp"
                android:text="Placed Oreder"
                android:textAllCaps="false"
                android:backgroundTint="#59B0F6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cuz_des" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>